apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: pomerium-tls
  namespace: pomerium
spec:
  secretName: pomerium-tls
  issuerRef:
    name: common-ca-issuer
    kind: ClusterIssuer
  dnsNames:
    - pomerium.${MACHINE_IP_NIP_DOMAIN}
    - pomerium.localhost
  ipAddresses:
    - ${MACHINE_IP}
    - 127.0.0.1