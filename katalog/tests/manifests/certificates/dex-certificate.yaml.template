apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: dex-tls
  namespace: kube-system
spec:
  secretName: dex-tls
  issuerRef:
    name: common-ca-issuer
    kind: ClusterIssuer
  dnsNames:
    - dex.${MACHINE_IP_NIP_DOMAIN}
    - dex.localhost
  ipAddresses:
    - ${MACHINE_IP}
    - 127.0.0.1